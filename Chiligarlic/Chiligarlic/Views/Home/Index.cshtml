@model Chiligarlic.ViewModels.HomeIndexViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>@Model.CurrentMessage</h1>
    <table>
        @foreach (var recipe in Model.Recipes)
        {
        <tr>
            <td>  @recipe.Id  </td>
            <td>@recipe.Name</td>
            <td>
                @*<a href="/home/details/@recipe.Id">Details</a>
                @Html.ActionLink("Go","Details", new { id = recipe.Id })*@
                <a asp-action="Details" asp-route-id="@recipe.Id">More</a>
            </td>
        </tr>
        }
    </table>
    <a asp-action="Create">Add a recipe</a>
</body>
</html>